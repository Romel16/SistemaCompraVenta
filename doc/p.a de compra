delimiter $$
--TODO: 
ALTER PROCEDURE sp_InsertarCompra(in sucursal_id INT, in usuario_id INT)
BEGIN
SET NOCOUNT ON
	INSERT INTO compra 
	(SUC_ID,USU_ID,EST)
	VALUES
	(sucursal_id,usuario_id,2)

	SELECT COMPR_ID FROM compra WHERE COMPR_ID=@@IDENTITY
SET NOCOUNT OFF;
END$$

CREATE PROCEDURE sp_I_Compra2
@COMPR_ID INT,
@PROD_ID INT,
@PROD_PCOMPRA NUMERIC(18,2),
@DETC_CANT INT
AS
BEGIN
	INSERT TD_COMPRA_DETALLE
	(COMPR_ID,PROD_ID,PROD_PCOMPRA,DETC_CANT,DETC_TOTAL,FECH_CREA,EST)
	VALUES
	(@COMPR_ID,@PROD_ID,@PROD_PCOMPRA,@DETC_CANT,@PROD_PCOMPRA * @DETC_CANT,GETDATE(),1)
END

CREATE PROCEDURE sp_listarCompra1 4
@COMPR_ID INT
AS
BEGIN
	SELECT        
	TD_COMPRA_DETALLE.DETC_ID, 
	TM_CATEGORIA.CAT_NOM, 
	TM_PRODUCTO.PROD_NOM, 
	TM_UNIDAD.UND_NOM, 
	TD_COMPRA_DETALLE.PROD_PCOMPRA,
	TD_COMPRA_DETALLE.DETC_CANT, 
	TD_COMPRA_DETALLE.DETC_TOTAL, 
	TD_COMPRA_DETALLE.COMPR_ID, 
	TD_COMPRA_DETALLE.PROD_ID
	FROM            
	TD_COMPRA_DETALLE INNER JOIN
	TM_PRODUCTO ON TD_COMPRA_DETALLE.PROD_ID = TM_PRODUCTO.PROD_ID INNER JOIN
	TM_CATEGORIA ON TM_PRODUCTO.CAT_ID = TM_CATEGORIA.CAT_ID INNER JOIN
	TM_UNIDAD ON TM_PRODUCTO.UND_ID = TM_UNIDAD.UND_ID
	WHERE
	TD_COMPRA_DETALLE.COMPR_ID = @COMPR_ID
	AND TD_COMPRA_DETALLE.EST=1
END

ALTER PROCEDURE sp_D_Compra1
@DETC_ID INT
AS
BEGIN
	UPDATE TD_COMPRA_DETALLE
	SET
		EST=0
	WHERE
		DETC_ID = @DETC_ID
END

ALTER PROCEDURE sp_U_Compra1
@COMPR_ID INT
AS
BEGIN
SET NOCOUNT ON
	UPDATE compra
	SET
		COMPR_SUBTOTAL = (SELECT SUM(DETC_TOTAL) AS COMPR_SUBTOTAL FROM TD_COMPRA_DETALLE WHERE COMPR_ID=@COMPR_ID AND EST=1),
		COMPR_IGV = (SELECT SUM(DETC_TOTAL) AS COMPR_SUBTOTAL FROM TD_COMPRA_DETALLE WHERE COMPR_ID=@COMPR_ID AND EST=1) * 0.18,
		COMPR_TOTAL = (SELECT SUM(DETC_TOTAL) AS COMPR_SUBTOTAL FROM TD_COMPRA_DETALLE WHERE COMPR_ID=@COMPR_ID AND EST=1) + ((SELECT SUM(DETC_TOTAL) AS COMPR_SUBTOTAL FROM TD_COMPRA_DETALLE WHERE COMPR_ID=@COMPR_ID AND EST=1) * 0.18)
	WHERE
		COMPR_ID = @COMPR_ID

	SELECT 
		COMPR_SUBTOTAL,
		COMPR_IGV,
		COMPR_TOTAL 
	FROM 
		compra
	WHERE
		COMPR_ID = @COMPR_ID
SET NOCOUNT OFF
END


ALTER PROCEDURE sp_listarCompra2
@COMPR_ID INT
AS
BEGIN
SELECT        
compra.COMPR_ID, 
compra.SUC_ID, 
compra.PAG_ID, 
compra.PROV_ID, 
compra.PROV_RUC, 
compra.PROV_DIRECC, 
compra.PROV_CORREO, 
compra.COMPR_SUBTOTAL, 
compra.COMPR_IGV, 
compra.COMPR_TOTAL, 
compra.COMPR_COMENT, 
compra.USU_ID, 
compra.MON_ID, 
compra.FECH_CREA, 
compra.EST, 
TM_SUCURSAL.SUC_NOM, 
TM_EMPRESA.EMP_NOM, 
TM_EMPRESA.EMP_RUC, 
TM_EMPRESA.EMP_CORREO, 
TM_EMPRESA.EMP_TELF, 
TM_EMPRESA.EMP_DIRECC, 
TM_EMPRESA.EMP_PAG, 
TM_COMPANIA.COM_NOM, 
usuario.USU_CORREO, 
usuario.USU_NOM, 
usuario.USU_APE, 
usuario.USU_DNI, 
usuario.USU_TELF, 
TM_ROL.ROlistarNOM, 
TM_PAGO.PAG_NOM, 
TM_MONEDA.MON_NOM,
TM_PROVEEDOR.PROV_NOM
FROM            
compra INNER JOIN
TM_SUCURSAL ON compra.SUC_ID = TM_SUCURSAL.SUC_ID INNER JOIN
TM_EMPRESA ON TM_SUCURSAL.EMP_ID = TM_EMPRESA.EMP_ID INNER JOIN
TM_COMPANIA ON TM_EMPRESA.COM_ID = TM_COMPANIA.COM_ID INNER JOIN
usuario ON compra.USU_ID = usuario.USU_ID INNER JOIN
TM_ROL ON usuario.ROlistarID = TM_ROL.ROlistarID INNER JOIN
TM_PAGO ON compra.PAG_ID = TM_PAGO.PAG_ID INNER JOIN
TM_MONEDA ON compra.MON_ID = TM_MONEDA.MON_ID INNER JOIN
TM_PROVEEDOR ON compra.PROV_ID = TM_PROVEEDOR.PROV_ID
WHERE  
compra.COMPR_ID = @COMPR_ID
END

  
CREATE PROCEDURE [dbo].[sp_U_Compra3]  
@COMPR_ID INT,  
@PAG_ID INT,  
@PROV_ID INT,  
@PROV_RUC VARCHAR(20),  
@PROV_DIRECC VARCHAR(150),  
@PROV_CORREO VARCHAR(150),  
@COMPR_COMENT VARCHAR(250),  
@MON_ID INT  
AS  
BEGIN  
 UPDATE compra  
 SET  
  PAG_ID = @PAG_ID,  
  PROV_ID = @PROV_ID,  
  PROV_RUC = @PROV_RUC,  
  PROV_DIRECC = @PROV_DIRECC,  
  PROV_CORREO = @PROV_CORREO,  
  COMPR_COMENT = @COMPR_COMENT,  
  MON_ID = @MON_ID,  
  FECH_CREA = GETDATE(),  
  EST = 1  
 WHERE  
  COMPR_ID = @COMPR_ID  
   
 DECLARE @ID_REGISTRO INT  
 DECLARE @PROD_ID INT  
 DECLARE @CANT INT  
  
 DECLARE CUR CURSOR FOR SELECT DETC_ID FROM TD_COMPRA_DETALLE WHERE COMPR_ID=@COMPR_ID  
 OPEN CUR  
 FETCH NEXT FROM CUR INTO @ID_REGISTRO  
 WHILE @@FETCH_STATUS=0  
  BEGIN  
   SELECT @PROD_ID=PROD_ID FROM TD_COMPRA_DETALLE WHERE DETC_ID = @ID_REGISTRO  
     
   SELECT @CANT=DETC_CANT FROM TD_COMPRA_DETALLE WHERE DETC_ID = @ID_REGISTRO  
  
   UPDATE TM_PRODUCTO  
   SET  
    PROD_STOCK = PROD_STOCK + @CANT  
   WHERE  
    PROD_ID = @PROD_ID  
  
   FETCH NEXT FROM CUR INTO @ID_REGISTRO  
  END  
 CLOSE CUR  
 DEALLOCATE CUR  
END

CREATE PROCEDURE sp_listarCompra3  
sucursal_id INT  
AS  
BEGIN  
 SELECT          
 compra.COMPR_ID,   
 compra.SUC_ID,   
 compra.PAG_ID,   
 compra.PROV_ID,   
 compra.PROV_RUC,   
 compra.PROV_DIRECC,   
 compra.PROV_CORREO,   
 compra.COMPR_SUBTOTAL,   
 compra.COMPR_IGV,   
 compra.COMPR_TOTAL,   
 compra.COMPR_COMENT,   
 compra.USU_ID,   
 compra.MON_ID,   
 compra.FECH_CREA,   
 compra.EST,   
 TM_SUCURSAL.SUC_NOM,   
 TM_EMPRESA.EMP_NOM,   
 TM_EMPRESA.EMP_RUC,   
 TM_EMPRESA.EMP_CORREO,   
 TM_EMPRESA.EMP_TELF,   
 TM_EMPRESA.EMP_DIRECC,   
 TM_EMPRESA.EMP_PAG,   
 TM_COMPANIA.COM_NOM,   
 usuario.USU_CORREO,   
 usuario.USU_NOM,   
 usuario.USU_APE,   
 usuario.USU_DNI,   
 usuario.USU_TELF,   
 TM_ROL.ROlistarNOM,   
 TM_PAGO.PAG_NOM,   
 TM_MONEDA.MON_NOM,  
 TM_PROVEEDOR.PROV_NOM  
 FROM              
 compra INNER JOIN  
 TM_SUCURSAL ON compra.SUC_ID = TM_SUCURSAL.SUC_ID INNER JOIN  
 TM_EMPRESA ON TM_SUCURSAL.EMP_ID = TM_EMPRESA.EMP_ID INNER JOIN  
 TM_COMPANIA ON TM_EMPRESA.COM_ID = TM_COMPANIA.COM_ID INNER JOIN  
 usuario ON compra.USU_ID = usuario.USU_ID INNER JOIN  
 TM_ROL ON usuario.ROlistarID = TM_ROL.ROlistarID INNER JOIN  
 TM_PAGO ON compra.PAG_ID = TM_PAGO.PAG_ID INNER JOIN  
 TM_MONEDA ON compra.MON_ID = TM_MONEDA.MON_ID INNER JOIN  
 TM_PROVEEDOR ON compra.PROV_ID = TM_PROVEEDOR.PROV_ID  
 WHERE  
 compra.EST=1  
 AND compra.SUC_ID = sucursal_id  
END

